{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "semistandard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/typedef": [2, {
            "arrowParameter": true,
            "variableDeclaration": true
        }],
        "no-explicit-any": [2, "always"],
        "no-use-before-define": "off",
        "semi": [2, "always"]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}