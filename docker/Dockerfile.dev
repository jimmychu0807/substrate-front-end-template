FROM node:gallium-alpine

ARG APP=${APP}
ARG BASE=/usr/local/apps/${APP}

WORKDIR ${BASE}

ENV PATH=${BASE}/node_modules/.bin:$PATH

COPY package.json .

RUN apk update && apk add --update git && rm -rf /var/cache/apk/*
RUN corepack enable \
    && corepack prepare yarn@stable --activate \
    && yarn set version 3.1.1 \
    && yarn plugin import interactive-tools \
    && echo -e "nodeLinker: node-modules\n\n$(cat ${BASE}/.yarnrc.yml)" > ${BASE}/.yarnrc.yml \
    && yarn

COPY . .

EXPOSE ${PORT}

CMD ["yarn", "run", "start"]
